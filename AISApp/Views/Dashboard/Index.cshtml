﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager

@model AISApp.ViewModels.DashboardViewModel

<h2>User Dashboard</h2>
<br />
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Hospital" asp-action="Create">Create Hospital</a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Dashboard" asp-action="EditUserProfile">Edit User Profile</a>
<div class="album py-5 bg-light">
    <div class="container">
        <h3 style="color:rebeccapurple;">Your added hospitals:</h3>
        <br />
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            

            @foreach (var item in Model.Hospitals)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a asp-controller="Hospital" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Hospital" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@item.HospitalCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
     

    </div>
</div>